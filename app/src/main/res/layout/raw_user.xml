<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="com.dhruv.apps.historyapp.models.GitUser.GitUserItem" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_4dp"
        android:background="@color/colorWhite"
        android:padding="@dimen/dim_16dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivProfileUser"
            android:layout_width="60dp"
            profileImage="@{data.avatarUrl}"
            android:layout_height="60dp"
            android:src="@drawable/ic_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_16dp"
            android:layout_marginEnd="@dimen/dim_16dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="2"
            android:text="@{data.login}"
            android:textSize="@dimen/text_dim_18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/ivProfileUser"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@id/switchOn"
            app:layout_constraintStart_toEndOf="@id/ivProfileUser"
            app:layout_constraintTop_toTopOf="@id/ivProfileUser" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchOn"
            android:checked="@{data.isChecked}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/ivProfileUser"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivProfileUser"
            app:thumbTint="@color/colorPrimary" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
